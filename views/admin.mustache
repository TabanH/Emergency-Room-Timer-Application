		<script>
			function disableLink(e){
			$(e).addClass("disabled-link");
			}
		</script>
		<!-- Bootstrap JS and dependencies (Popper.js) -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-MJwEOjyqsuTlvF4n+aLZDmzsdwlC3ZcREH8bBWCOrA3LSObeCqJfScJ7T4Wswf68" crossorigin="anonymous"></script>
		<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

	</body>
</html>
